{
  "kind": "singleType",
  "collectionName": "globals",
  "info": {
    "singularName": "global",
    "pluralName": "globals",
    "displayName": "Global",
    "description": "Define global settings"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "favicon": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "siteName": {
      "type": "string",
      "required": true
    },
    "siteDescription": {
      "type": "text",
      "required": true
    },
    "siteNavigation": {
      "type": "json"
    },
    "logo": {
      "type": "component",
      "component": "shared.icon",
      "repeatable": false
    },
    "theme": {
      "type": "enumeration",
      "enum": [
        "light",
        "dark"
      ]
    },
    "siteEmail": {
      "type": "email"
    },
    "sitePhone": {
      "type": "component",
      "component": "shared.input",
      "repeatable": false
    },
    "siteQr": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images"
      ]
    },
    "request": {
      "type": "component",
      "component": "complex.request-form",
      "repeatable": false
    }
  }
}
